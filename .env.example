# Mobile Test Farm - Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# APPIUM SERVER CONFIGURATION
# =============================================================================
APPIUM_HOST=localhost
APPIUM_PORT=4723
APPIUM_PATH=/
APPIUM_PROTOCOL=http

# =============================================================================
# TIMEOUT SETTINGS (milliseconds)
# =============================================================================
IMPLICIT_WAIT=5000          # Default element wait
EXPLICIT_WAIT=10000         # Explicit waits
PAGE_LOAD_TIMEOUT=30000     # Page load timeout
SCRIPT_TIMEOUT=30000        # Script execution timeout

# =============================================================================
# APPLICATION PATHS
# =============================================================================
# Android App Paths
ANDROID_APP_DEBUG=/path/to/android/app-debug.apk
ANDROID_APP_RELEASE=/path/to/android/app-release.apk

# iOS App Paths
IOS_APP_SIMULATOR=/path/to/ios/app.app
IOS_APP_DEVICE=/path/to/ios/app.ipa

# =============================================================================
# APP PACKAGE/BUNDLE INFORMATION
# =============================================================================
# Android
ANDROID_PACKAGE=com.example.app
ANDROID_ACTIVITY=.MainActivity

# iOS
IOS_BUNDLE_ID=com.example.app

# =============================================================================
# TEST CREDENTIALS
# =============================================================================
TEST_USERNAME=demo
TEST_PASSWORD=password

# =============================================================================
# SCREENSHOT SETTINGS
# =============================================================================
SCREENSHOTS_ENABLED=true
SCREENSHOTS_ON_FAILURE=true
SCREENSHOTS_PATH=./screenshots

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info              # Options: debug, info, warn, error
VERBOSE=false
LOG_TIMESTAMPS=true

# =============================================================================
# TEST BEHAVIOR
# =============================================================================
NO_RESET=false              # Don't reset app state between tests
FULL_RESET=false            # Full app reinstall
AUTO_ACCEPT_ALERTS=false    # Auto-accept system alerts
AUTO_DISMISS_ALERTS=false   # Auto-dismiss system alerts

# =============================================================================
# PERFORMANCE SETTINGS (seconds)
# =============================================================================
NEW_COMMAND_TIMEOUT=60      # Timeout for new commands
WAIT_FOR_IDLE=10            # Wait for app to be idle

# =============================================================================
# NOTIFICATIONS - Multi-Platform Support
# =============================================================================
# Enable/disable all notifications
NOTIFICATIONS_ENABLED=true

# --- Slack ---
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#test-results
SLACK_USERNAME=Mobile Test Farm
SLACK_ICON_EMOJI=:robot_face:

# --- Microsoft Teams ---
# Get webhook URL from: Teams > Channel > Connectors > Incoming Webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL

# --- Discord ---
# Get webhook URL from: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL
DISCORD_USERNAME=Mobile Test Farm
DISCORD_AVATAR_URL=

# --- Email (via webhook) ---
# Use SendGrid, Mailgun, or similar email API service
EMAIL_WEBHOOK_URL=https://api.sendgrid.com/v3/mail/send
EMAIL_TO=team@example.com
EMAIL_FROM=noreply@mobile-test-farm.com

# --- Custom Webhook ---
# Send notifications to any custom webhook endpoint
CUSTOM_WEBHOOK_URL=https://your-api.com/webhook
CUSTOM_WEBHOOK_METHOD=POST
CUSTOM_WEBHOOK_HEADERS={"Authorization":"Bearer YOUR_TOKEN","Content-Type":"application/json"}

# =============================================================================
# TEST RETRY CONFIGURATION
# =============================================================================
TEST_RETRY_ENABLED=true
TEST_MAX_RETRIES=2          # Number of retries for failed tests
TEST_RETRY_DELAY=3000       # Delay between retries (milliseconds)

# =============================================================================
# VIDEO RECORDING
# =============================================================================
VIDEOS_ENABLED=false        # Record all tests
VIDEOS_ON_FAILURE=true      # Record only on failure (recommended)
VIDEO_QUALITY=medium        # Options: low, medium, high
VIDEOS_PATH=./videos
MAX_VIDEOS=10               # Keep last N videos
