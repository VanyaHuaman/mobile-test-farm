{
  "name": "mobile-test-farm",
  "version": "1.0.0",
  "description": "Automated mobile device testing infrastructure for running screen tests and end-to-end flows across multiple physical devices.",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "setup": "node bin/setup.js",
    "start": "concurrently --kill-others --names \"APPIUM,DASHBOARD,HEALTH\" -c \"cyan,green,yellow\" \"npm run appium\" \"npm run dashboard\" \"npm run services:wait\"",
    "dev": "npm start",
    "test": "node tests/specs/login.spec.js",
    "appium": "appium",
    "services:check": "node bin/check-services.js check",
    "services:wait": "node bin/check-services.js wait",
    "test:login": "node tests/login-test.js",
    "test:login:pom": "node tests/specs/login.spec.js",
    "test:login:release": "node tests/login-test-release.js",
    "test:form": "node tests/specs/form.spec.js",
    "test:list": "node tests/specs/list.spec.js",
    "test:profile": "node tests/specs/profile.spec.js",
    "test:navigation": "node tests/specs/navigation.spec.js",
    "test:users": "node tests/specs/users.spec.js",
    "test:posts": "node tests/specs/posts.spec.js",
    "test:suite:all": "npm run test:login:pom && npm run test:form && npm run test:list && npm run test:profile && npm run test:navigation",
    "test:api:all": "npm run test:users && npm run test:posts",
    "test:parallel": "node run-parallel.js",
    "test:parallel:all": "node run-parallel.js tests/specs/login.spec.js --all-local",
    "test:parallel:hybrid": "node run-parallel.js tests/specs/login.spec.js --hybrid",
    "test:parallel:cloud": "node run-parallel.js tests/specs/login.spec.js --cloud",
    "test:parallel:help": "node run-parallel.js --help",
    "report:generate": "node bin/generate-report.js",
    "report:open": "npx allure open allure-report",
    "report:serve": "npx allure serve allure-results",
    "report:clean": "rm -rf allure-results allure-report",
    "devices": "node bin/devices.js",
    "devices:list": "node bin/devices.js list",
    "devices:sync": "node bin/devices.js sync",
    "devices:register": "node bin/devices.js register",
    "notify:test": "node bin/test-notification.js",
    "dashboard": "node server/index.js",
    "dashboard:dev": "nodemon server/index.js",
    "setup:mitm": "node bin/setup-mitm.js",
    "setup:mitm:android": "node bin/setup-mitm.js --android",
    "setup:mitm:ios": "node bin/setup-mitm.js --ios"
  },
  "bin": {
    "devices": "./bin/devices.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VanyaHuaman/mobile-test-farm.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/VanyaHuaman/mobile-test-farm/issues"
  },
  "homepage": "https://github.com/VanyaHuaman/mobile-test-farm#readme",
  "devDependencies": {
    "@appium/doctor": "^2.1.15",
    "@mockoon/cli": "^9.4.0",
    "@wdio/allure-reporter": "^9.21.0",
    "allure-commandline": "^2.36.0",
    "appium-uiautomator2-driver": "^6.7.5",
    "appium-xcuitest-driver": "^10.12.2",
    "concurrently": "^9.2.1",
    "webdriverio": "^9.21.0"
  },
  "dependencies": {
    "appium": "^3.1.2",
    "body-parser": "^2.2.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "express-ws": "^5.0.2",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  }
}
